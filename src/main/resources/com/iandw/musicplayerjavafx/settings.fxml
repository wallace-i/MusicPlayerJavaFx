                  <Insets left="10.0"/>
              </padding>
           </Label>
           <Button fx:id="clearLibrary" mnemonicParsing="false" prefWidth="85.0" text="Clear Library"
                   onMouseClicked="#clearLibraryClicked" GridPane.rowIndex="5"/>
